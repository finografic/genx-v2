{
  "name": "__PACKAGE_NAME__",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.8.0",
  "description": "__DESCRIPTION__",
  "homepage": "https://github.com/finografic/__NAME__",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/finografic/__NAME__.git"
  },
  "bugs": {
    "url": "https://github.com/finografic/__NAME__/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "author": {
    "name": "__AUTHOR_NAME__",
    "email": "__AUTHOR_EMAIL__"
  },
  "license": "MIT",
  "keywords": [
    "finografic",
    "__NAME__"
  ],
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "module": "./dist/index.mjs",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "scripts": {
    "========== DEV": "=======================================================",
    "dev": "tsdown --watch",
    "link": "pnpm build && pnpm link --global",
    "unlink": "pnpm unlink --global",
    "·········· BUILD": "·····················································",
    "build": "tsdown",
    "·········· TESTING": "···················································",
    "test": "vitest",
    "test.run": "vitest run",
    "test.coverage": "vitest run --coverage",
    "·········· LINTING": "···················································",
    "lint": "eslint .",
    "lint.fix": "eslint . --fix",
    "·········· FORMATTING": "················································",
    "format": "dprint fmt --diff",
    "format.check": "dprint check",
    "·········· PUBLISH.GITHUB": "············································",
    "release.github.patch": "pnpm run release.check && pnpm version patch && git push --follow-tags",
    "release.github.minor": "pnpm run release.check && pnpm version minor && git push --follow-tags",
    "release.github.major": "pnpm run release.check && pnpm version major && git push --follow-tags",
    "release.check": "pnpm format.check && pnpm lint.fix && pnpm typecheck && pnpm test.run",
    "release.publish.check": "tsx scripts/check-version-published.ts",
    "release.publish": "pnpm run release.publish.check && pnpm publish --registry https://npm.pkg.github.com",
    "·········· REGISTRIES": "··············································",
    "view.registry.github": "pnpm view __PACKAGE_NAME__ --registry=https://npm.pkg.github.com",
    "·········· PACKAGES": "··················································",
    "update.eslint-config": "pnpm update @finografic/eslint-config --latest",
    "update.dprint-config": "pnpm update @finografic/dprint-config --latest",
    "update.project-scripts": "pnpm update @finografic/core --latest",
    "upgrade.deps.all": "pnpm update --latest",
    "·········· UTILS": "·····················································",
    "tsc.debug": "tsc --pretty --project tsconfig.json",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "·········· HOOKS": "·····················································",
    "prepack": "pnpm build",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@finografic/core": "^0.9.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@finografic/dprint-config": "^0.12.1",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "9.39.2",
    "eslint-plugin-markdownlint": "^0.9.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.19.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs}": [
      "dprint fmt --allow-no-files",
      "eslint --fix"
    ],
    "*.{json,jsonc,md,yml,yaml,toml}": [
      "dprint fmt --allow-no-files"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged --allow-empty"
  }
}
