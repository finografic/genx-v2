{
  "name": "__PACKAGE_NAME__",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.8.0",
  "description": "__DESCRIPTION__",
  "homepage": "https://github.com/finografic/__NAME__",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/finografic/__NAME__.git"
  },
  "bugs": {
    "url": "https://github.com/finografic/__NAME__/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "author": {
    "name": "__AUTHOR_NAME__",
    "email": "__AUTHOR_EMAIL__",
    "url": "__AUTHOR_URL__"
  },
  "license": "MIT",
  "keywords": [
    "finografic",
    "__NAME__"
  ],
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "module": "./dist/index.mjs",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "scripts": {
    "========== DEV": "=======================================================",
    "dev": "tsdown --watch",
    "·········· BUILD": "·····················································",
    "build": "tsdown",
    "·········· TESTING": "···················································",
    "test.run": "vitest",
    "test.coverage": "vitest run --coverage",
    "·········· LINTING": "···················································",
    "lint": "eslint .",
    "lint.fix": "eslint . --fix",
    "lint.markdown.fix": "markdownlint --fix . --ignore ./node_modules",
    "·········· PUBLISH.GITHUB": "·····················································",
    "release.github.patch": "pnpm run release.check && pnpm version patch && git push --tags",
    "release.github.minor": "pnpm run release.check && pnpm version minor && git push --tags",
    "release.github.major": "pnpm run release.check && pnpm version major && git push --tags",
    "release.check": "pnpm lint && pnpm typecheck",
    "·········· REGISTRIES": "··············································",
    "view.registry.github": "pnpm view __PACKAGE_NAME__ --registry=https://npm.pkg.github.com",
    "·········· PACKAGES": "··················································",
    "update.project-scripts": "pnpm update @finografic/core --latest",
    "upgrade.deps.all": "pnpm update --latest",
    "·········· UTILS": "·····················································",
    "tsc.debug": "tsc --pretty --project tsconfig.json",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "·········· HOOKS": "·····················································",
    "prepack": "pnpm build",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@finografic/core": "^0.6.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@types/node": "20.15.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "9.39.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "lint-staged": "^16.2.7",
    "markdownlint": "^0.40.0",
    "markdownlint-cli": "^0.47.0",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.18.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs,cjs}": [
      "pnpm exec eslint --fix"
    ]
  }
}
