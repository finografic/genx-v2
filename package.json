{
  "name": "@finografic/create",
  "type": "module",
  "version": "0.8.4",
  "packageManager": "pnpm@10.8.0",
  "description": "Opinionated generator and codemod toolkit for the @finografic ecosystem.",
  "homepage": "https://github.com/finografic/create",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/finografic/create.git"
  },
  "bugs": {
    "url": "https://github.com/finografic/create/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "author": {
    "name": "Justin",
    "email": "justin.blair.rankin@gmail.com",
    "url": "http://finografic.github.com/cv-justin-rankin"
  },
  "license": "MIT",
  "keywords": [
    "finografic",
    "create",
    "generator",
    "scaffold",
    "codemod",
    "cli"
  ],
  "bin": {
    "finografic-create": "./dist/index.mjs"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "module": "./dist/index.mjs",
  "files": [
    "dist",
    "templates"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "scripts": {
    "========== DEV": "=======================================================",
    "dev": "tsdown --watch",
    "dev.cli": "NODE_ENV=development tsx src/cli.ts --",
    "link": "pnpm build && pnpm link --global",
    "unlink": "pnpm unlink --global",
    "·········· BUILD": "·····················································",
    "build": "tsdown",
    "·········· TESTING": "···················································",
    "test": "vitest",
    "test.run": "vitest run",
    "test.coverage": "vitest run --coverage",
    "·········· LINTING": "···················································",
    "lint": "eslint .",
    "lint.fix": "eslint . --fix",
    "·········· PUBLISH.GITHUB": "············································",
    "release.github.patch": "pnpm run release.check && pnpm version patch && git push --follow-tags",
    "release.github.minor": "pnpm run release.check && pnpm version minor && git push --follow-tags",
    "release.github.major": "pnpm run release.check && pnpm version major && git push --follow-tags",
    "release.check": "pnpm lint.fix && pnpm typecheck && pnpm test.run",
    "release.publish": "pnpm publish --registry https://npm.pkg.github.com",
    "·········· REGISTRIES": "··············································",
    "view.registry.github": "pnpm view @finografic/create --registry=https://npm.pkg.github.com",
    "·········· PACKAGES": "··················································",
    "update.core": "pnpm update @finografic/core --latest",
    "update.eslint-config": "pnpm update @finografic/eslint-config --latest",
    "update.project-scripts": "pnpm update @finografic/project-scripts --latest",
    "upgrade.deps.all": "pnpm update --latest",
    "·········· UTILS": "·····················································",
    "tsc.debug": "tsc --pretty --project tsconfig.json",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "·········· HOOKS": "·····················································",
    "prepack": "pnpm build",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@clack/prompts": "1.0.0-alpha.9",
    "@finografic/core": "^0.9.2",
    "clack-tree-select": "^1.0.8",
    "execa": "^9.6.1",
    "fast-glob": "^3.3.3",
    "picocolors": "^1.1.1",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "9.39.2",
    "eslint-plugin-markdownlint": "^0.9.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.18.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs,cjs}": [
      "eslint --fix"
    ]
  }
}
